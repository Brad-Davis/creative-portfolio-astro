<div id="music" style="padding: 20px;">
    <h2>Music</h2>
    <div class="container-music">
        {musicData.map((music, index) => (
            <a href={music.link} target="_blank" class="music-link">
                <div key={index} class="col-music">
                    <img src={music.image} alt={music.description} />
                    <h3>{music.title}</h3>
                    <p>{music.role}</p>
                    <p class="music-description">{music.description}</p>
