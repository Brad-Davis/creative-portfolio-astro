        overflow: hidden;
        background-color: transparent;
        padding: 20px;
        margin: -20px;
    }

    .music-link:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    /* Light mode hover effects */
    body:not(.dark) .music-link:hover {
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    /* Dark mode hover effects */
    body.dark .music-link:hover {
        box-shadow: 0 20px 40px rgba(255, 255, 255, 0.1);
    }

    .col-music {
        /* Remove styling that's now on .music-link */
    }

    .music-link img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        transition: opacity 0.3s ease;
    }

    .music-link:hover img {
        opacity: 0.9;
    }

    .music-link h3 {
        margin: 10px 0 5px 0;
        transition: color 0.3s ease;
    }

    .music-link p {
        margin: 5px 0;
        transition: color 0.3s ease;
    }

    .music-description {
        font-size: 0.8em;
        opacity: 0.8;
    }

    .music-link:hover .music-description {
        opacity: 1;
    }

    @media screen and (max-width: 768px) {
        .container-music {
            grid-template-columns: repeat(2, 1fr);
            column-gap: 10px;
        }

        /* Reduce hover effects on mobile for better touch experience */
        .music-link:hover {
            transform: translateY(-5px);
        }

        body:not(.dark) .music-link:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        body.dark .music-link:hover {
            box-shadow: 0 10px 20px rgba(255, 255, 255, 0.05);
        }
    }
</style>
