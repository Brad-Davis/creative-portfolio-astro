<style>
    .container-music {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        column-gap: 50px;
        row-gap: 30px;
        justify-items: center;
    }

    .music-link {
        text-decoration: none;
        color: inherit;
        display: block;
        margin: 1%;
        box-sizing: border-box;
        transition: transform 0.3s ease, box-shadow 0.3s ease, max-height 0.3s ease;
