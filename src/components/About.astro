<style>
    .about-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 20px;
    }

    .about-left {
        flex: 1;
        margin-bottom: 20px;
        display: flex;
        justify-content: center;
    }

    .about-left img {
        width: 50%;
        margin: auto;
        border-radius: 15px;
    }

    .about-right {
        flex: 1;
        text-align: left;
    }

    .about-right h2 {
        margin-bottom: 10px;
        margin-top: 0;
    }

    .about-right p {
        max-width: 600px;
    }

    .contact-bar {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    :global(.dark) .contact-bar a {
        color: white;
    } 

    .contact-bar a {
        text-decoration: none;
        color: black;
        transition: 0.4s;
    }

    .contact-bar a:hover {
        color: #808080;
    }

    @media (max-width: 768px) {
        .about-container {
            flex-direction: column;
            align-items: center;
        }

        .about-left img {
            width: 50%;
            margin-bottom: 20px;
        }
    }
</style>
