---
export interface Props {
	title?: string;
	description?: string;
}

const { title = "BCD-ROM", description = "Bradley CD AKA BCD-ROM is a creative technologist and music producer based in Brooklyn and this is his creative portfolio!" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#000000" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Sorts+Mill+Goudy&display=swap');

	@font-face {
		font-family: 'ManifontGroteskBook';
		src: url('/fonts/ManifontGroteskBook.ttf') format('truetype');
		font-weight: 1;
	}

	html {
		scroll-behavior: smooth;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		margin: 0;
		font-family: 'ManifontGroteskBook', serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		background-color: white;
		font-weight: lighter !important;
		color: black;
		width: 100%;
		height: 100%;
		transition: background-color 0.3s ease, color 0.3s ease;
	}

	body.dark {
		background-color: black;
		color: white;
	}

	h1, h2, h3 {
		font-weight: lighter;
	}

	h5 {
		font-weight: 100;
	}

	.App {
		text-align: center;
	}

	.flexyyy {
		display: flex;
		width: 100%;
		justify-content: center;
		align-items: center;
	}

	.container {
		padding: 10%;
		padding-top: 0;
		max-width: 1500px;
		margin: 0 auto;
		padding-bottom: 20px;
		text-align: left;
	}

	.lightswitch {
		width: 100px;
		cursor: pointer;
		width: 250px;
		margin: auto;
		box-sizing: border-box;
		padding: 75px;
	}

	.lightswitch img {
		width: 100%;
	}

	nav {
		flex-grow: 1;
	}

	nav ul {
		list-style: none;
		display: flex;
		justify-content: space-around;
		padding: 0;
		max-width: 500px;
		margin: auto;
	}

	nav li {
		margin: 0 10px;
	}

	nav a {
		font-size: 1.5em;
		text-decoration: none;
		transition: color 0.3s;
		position: relative;
		color: black;
		border-bottom: 2px solid transparent;
	}

	nav a:hover {
		color: #808080 !important;
		transform: scale(1.1);
	}

	.dark nav a {
		color: white;
	}

	@media (max-width: 768px) {
		nav {
			width: 100%;
		}

		.lightswitch {
			display: none;
		}

		nav li {
			margin: 10px 0;
		}

		.container {
			padding: 20px;
		}

		canvas {
			width: 175px !important;
			height: 175px !important;
		}

		.flexyyy {
			flex-direction: column;
		}

		.phoneShrink {
			font-size: 1.2em;
		}
	}
</style>
